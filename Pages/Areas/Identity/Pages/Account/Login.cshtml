@page
@model LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height:80vh;">
    <div class="card shadow-lg p-4 rounded-4" style="width:420px;">
        <div class="text-center mb-4">
            <img src="/images/logo.png" alt="KBHome" style="height:60px;">
            <h3 class="mt-3 text-dark fw-bold">Đăng nhập vào tài khoản</h3>
        </div>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control rounded-3" autocomplete="current-password" placeholder="Password" />
                <label asp-for="Input.Password">Mật khẩu</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">Nhớ đăng nhập</label>
                </div>
                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none small">Quên mật khẩu?</a>
            </div>

            <button id="login-submit" type="submit" class="btn btn-warning text-white fw-semibold w-100 py-2 rounded-3">
                <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
            </button>

            <div class="text-center mt-3">
                <span>Chưa có tài khoản?</span>
                <a asp-page="./Register" class="fw-semibold text-primary text-decoration-none">Đăng ký ngay</a>
            </div>
        </form>
    </div>
</div>
