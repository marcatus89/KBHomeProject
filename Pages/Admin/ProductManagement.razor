        </tbody>
    </table>

    <!-- PH√ÇN TRANG -->
    @if (totalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">Tr∆∞·ªõc</button>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
